/* Define Nord colors */
@define-color background #2E3440;
@define-color background-alt #3B4252;
@define-color foreground #D8DEE9;
@define-color foreground-alt #E5E9F0;
@define-color primary #88C0D0;
@define-color secondary #81A1C1;
@define-color alert #BF616A;
@define-color disabled #4C566A;
@define-color orange #D08770;
@define-color yellow #EBCB8B;
@define-color green #A3BE8C;
@define-color purple #B48EAD;

/* Main bar styling */
window#waybar {
    background: @background;
    color: @foreground;
    font-family: monospace, "fontello", "Font Awesome 5 Free";
    font-size: 12pt;
    border: 4pt solid @background;
    margin: 0;
}

/* Common module styling */
#workspaces,
#window,
#clock,
#disk,
#cpu,
#memory,
#network,
#bluetooth,
#custom-audio,
#language,
#battery,
#custom-powermenu {
    padding: 0 8px;
    margin: 0 4px;
    color: @foreground;
}

/* Add separator between modules */
#disk,
#cpu,
#memory,
#network,
#bluetooth,
#custom-audio,
#language,
#battery {
    border-right: 1px solid @disabled;
    padding-right: 8px;
    margin-right: 8px;
}

/* Workspaces styling */
#workspaces button {
    padding: 0 4px;
    margin: 0 2px;
    color: @foreground;
    border-bottom: 3pt solid transparent;
}

#workspaces button.focused {
    background: @background-alt;
    border-bottom: 3pt solid @primary;
}

#workspaces button.urgent {
    background: @alert;
}

/* Line below the bar */
window#waybar {
    border-bottom: 3pt solid @background-alt;
}
